import java.util.*;
class Main {
    void demo(String s){
        int n=s.length();
        for(int i=n-1;i>=0;i--){
            char ch=s.charAt(i);
             System.out.print(ch);
        }
    }
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        String s=sc.nextLine();
        Main obj=new Main();
        obj.demo(s);

            
    }    
        }
