import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc=new Scanner(System.in);
        int b=sc.nextInt();
        int h=sc.nextInt();
        int s1=sc.nextInt();
        int s2=sc.nextInt();
        int s3=sc.nextInt();
        System.out.printf("Area of Triangle is %.2f\n",(float)1/2*b*h);
        System.out.printf("Perimeter of Triangle is %.2f",(float)s1+s2+s3);
    }
}
